<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded">
    <StackLayout id="container">
        <Button text="" tap="addTabViewItem" />
        <TabView id="tabViewContainer">
            <TabView.items>
                <TabViewItem title="Tab 1">
                    <TabViewItem.view>
                        <Label text="This is Tab 1" />
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Tab 2" visibility="{{ isItemVisible ? 'visible' : 'collapsed' }}">
                    <TabViewItem.view>
                        <Label text="This is Tab 2" />
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Tab 3">
                    <TabViewItem.view>
                        <Label text="This is Tab 3" />
                    </TabViewItem.view>
                </TabViewItem>
            </TabView.items>
        </TabView>
    </StackLayout>
</Page>