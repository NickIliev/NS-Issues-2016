<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded">
  <Page.actionBar>
        <ActionBar title="Add New Moment"></ActionBar>
    </Page.actionBar>
    <ScrollView>
        <StackLayout>
            <TextField text="{{ link }}" hint="Link" />
            <TextField text="{{ description }}" hint="Description" />
            <Button text="Add New" tap="add" />
        </StackLayout>
    </ScrollView>
</Page>