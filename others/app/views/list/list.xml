<Page loaded="onLoaded" xmlns="http://www.nativescript.org/tns.xsd" xmlns:lv="nativescript-telerik-ui-pro/listview">
  <Page.actionBar>
   <ActionBar title="My Momments">
     <ActionBar.actionItems>
       <ActionItem text="New" tap="addMedia" ios.position="right" />
     </ActionBar.actionItems>
   </ActionBar>
 </Page.actionBar>
 <StackLayout orientation="vertical">
   <lv:RadListView items="{{ mainList }}" loadOnDemandMode="Manual" loadMoreDataRequested="{{ onLoadMoreItemsRequested }}" >
        <lv:RadListView.listViewLayout>
            <lv:ListViewLinearLayout scrollDirection="Vertical"/>
        </lv:RadListView.listViewLayout>
        <lv:RadListView.itemTemplate>
            <StackLayout orientation="vertical">
                <GridLayout rows="*, *, *, *" columns="*, *, *">
                  <Button text="{{ owner ? owner : 'Default User' }}" row="0" col="0" tap="showUserDetails" />
                  <Label text="{{ '+ votes ' + likes }}" row="0" col="1" />
                  <Label text="{{ '- votes ' + dislikes }}" row="0" col="2" />
                  <Image src="{{ link }}" row="1" colSpan="3" height="150"/>
                  <Label text="{{ description }}" textWrap="true" row="2" colSpan="3" /> 
                  <Button text="Like" row="3" col="0" tap="likeMedia" />
                  <Button text="Dislike" row="3" col="1" tap="dislikeMedia" />
                  <Button text="Share" row="3" col="2" tap="shareLink" />
                </GridLayout>
            </StackLayout>
        </lv:RadListView.itemTemplate>
    </lv:RadListView> 
 </StackLayout> 
</Page>