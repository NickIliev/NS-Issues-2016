        <StackLayout orientation="horizontal">
          <StackLayout class="menuItemLabel">
            <Label text="Health Conditions" />
          </StackLayout>
          <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
          </StackLayout>
        </StackLayout>
      </RL:Ripple>
    </StackLayout>
    <StackLayout row="7" cssClass="menuItem main-color" orientation="horizontal">
