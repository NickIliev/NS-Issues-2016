<GridLayout id="drawer-content" rows="*,*,*,*,*,*,*,*, 2*">
    <StackLayout row="0" cssClass="menuItem main-color" orientation="horizontal" tap="goToProviderSearchPage">
        <StackLayout class="menuItemLabel">
            <Label text="Find a Provider"/>
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="1" cssClass="menuItem main-color" orientation="horizontal" tap="goToLocationSearchPage">
        <StackLayout class="menuItemLabel">
            <Label text="Find a Location" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="2" cssClass="menuItem main-color" orientation="horizontal" tap="goToFindPHR">
        <StackLayout class="menuItemLabel">
            <Label text="Find a Personal Health Record" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="3" cssClass="menuItem main-color" orientation="horizontal" tap="goToAccessUH">
        <StackLayout class="menuItemLabel">
            <Label text="Find Nearest ER or Urgent Care" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="4" cssClass="menuItem main-color" orientation="horizontal" tap="goToSymptomCheckerPage">
        <StackLayout class="menuItemLabel">
            <Label text="Symptom Checker" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="5" cssClass="menuItem main-color" orientation="horizontal" tap="goToConditionSearch">
        <StackLayout class="menuItemLabel">
            <Label text="Health Conditions" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="6" cssClass="menuItem main-color" orientation="horizontal" tap="goToTermsOfUse">
        <StackLayout class="menuItemLabel">
            <Label text="Terms of Use" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <StackLayout row="7" cssClass="menuItem main-color" orientation="horizontal" tap="goToContactUH">
        <StackLayout class="menuItemLabel">
            <Label text="Contact UH" />
        </StackLayout>
        <StackLayout class="menuItemIcon">
            <Label text="&#xf105;" class="icon" />
        </StackLayout>
    </StackLayout>
    <Image row="8" src="~/images/drawerLogo.png" />
</GridLayout>